{
  "name": "hexagonal-tasks",
  "description": "API de notas utilizando arquitectura hexagonal",
  "version": "0.0.1",
  "main": "index.js",
  "author": "franco4457",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/franco4457/hexagonal-tasks.git"
  },
  "keywords": [
    "hexagonal",
    "typescript",
    "api"
  ],
  "workspaces": [
    "./packages/**/*",
    "./apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "start:express": "node build/src/index.js",
    "dev:express": "tsup --watch --onSuccess \"node dist/index.js\"",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "vitest",
    "create:domain": "turbo gen domain",
    "create:app": "turbo gen application",
    "create:infra": "turbo gen infrastructure"
  },
  "devDependencies": {
    "@config/eslint": "workspace:*",
    "@config/typescript": "workspace:*",
    "@turbo/gen": "^1.12.5",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.57.0",
    "supertest": "^6.3.4",
    "turbo": "^1.12.5",
    "typescript": "5.4.3",
    "vitest": "^1.4.0"
  }
}
