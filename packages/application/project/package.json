{
  "name": "@application/project",
  "version": "0.0.0",
  "description": "Use cases and applications for Projects from Pomodoro App",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx .",
    "typecheck": "ts-check",
    "dev": "tsup --watch",
    "build": "tsup"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": false
  },
  "dependencies": {
    "@domain/core": "workspace:*",
    "@domain/project": "workspace:*",
    "@domain/task": "workspace:*"
  },
  "devDependencies": {
    "@config/eslint": "workspace:*",
    "@config/typescript": "workspace:*",
    "tsup": "^8.0.2"
  }
}
